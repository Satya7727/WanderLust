<% layout("/layouts/boilerplate") %>

<style>
  #filters {
    display: flex;
    flex-wrap: nowrap;
    overflow-x: auto;
    align-items: center;
    padding: 1rem;
    gap: 2rem;
    scroll-behavior: smooth;
    margin-top: 1rem;
  }

  #filters::-webkit-scrollbar {
    display: none;
  }

  #filters {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  .filter {
    text-align: center;
    color: black;
    opacity: 0.7;
    flex: 0 0 auto;
    text-decoration: none;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.8rem;
    margin-top: 0.3rem;
  }

  .tax-info {
    display: none;
  }

  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 2.8rem;
    padding: 0 1rem;
    display: flex;
    align-items: center;
    white-space: nowrap;
    flex: 0 0 auto;
  }
</style>

<div id="filters" class="mb-1">
  <a href="/listings/index?category=Trendings" class="filter"><div><i class="fa-solid fa-fire"></i></div><p>Trending</p></a>
  <a href="/listings/index?category=Rooms" class="filter"><div><i class="fa-solid fa-bed"></i></div><p>Rooms</p></a>
  <a href="/listings/index?category=Iconic cities" class="filter"><div><i class="fa-solid fa-mountain-city"></i></div><p>Iconic cities</p></a>
  <a href="/listings/index?category=Mountains" class="filter"><div><i class="fa-solid fa-mountain"></i></div><p>Mountains</p></a>
  <a href="/listings/index?category=Castles" class="filter"><div><i class="fa-brands fa-fort-awesome"></i></div><p>Castles</p></a>
  <a href="/listings/index?category=Amazing pools" class="filter"><div><i class="fa-solid fa-person-swimming"></i></div><p>Amazing pools</p></a>
  <a href="/listings/index?category=Camping" class="filter"><div><i class="fa-solid fa-campground"></i></div><p>Camping</p></a>
  <a href="/listings/index?category=Farms" class="filter"><div><i class="fa-brands fa-cow"></i></div><p>Farms</p></a>
  <a href="/listings/index?category=Arctic" class="filter"><div><i class="fa-solid fa-snowflake"></i></div><p>Arctic</p></a>
  <a href="/listings/index?category=Domes" class="filter"><div><i class="fa-solid fa-igloo"></i></div><p>Domes</p></a>

  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
    </div>
  </div>
</div>


<div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 g-4 px-3">
  <% for(let listing of allListings) { %>
    <div class="col">
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card listing-card">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing image">
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b><br>
              &#x20B9;<%= listing.price.toLocaleString("en-IN") %>/night
              <i class="tax-info"> +18% GST</i><br>
            </p>
          </div>
        </div>
      </a>
    </div>
  <% } %>
</div>

<script>
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (let info of taxInfo) {
      info.style.display = (info.style.display !== "inline") ? "inline" : "none";
    }
  });
</script>
